%html
  %head
    %title My first Vue app
    %script{:src => "https://cdn.jsdelivr.net/npm/vue@2.5.16/dist/vue.js"}
    :css
      .hello {
        font-size:20pt;
        font-weight:bold;
        border:1px solid magenta;
        padding:5px 10px 0px 10px;
        margin:10px;
      }
  %body
    %h1 Vue.js
    #app
      -# これがコンポーネント
      %hello
    :javascript
      // 1.Vueコンポーネントを作成し
      var hello = Vue.component('hello',
      {
          data: function() {
              return {
                  counter:0 // クロージャ => counterの値が保持される && 外からアクセス不可
                  // コンポーネント内部で使われる変数
              };
          },
          template: '<p @click="counter++;"class="hello">clicked: {{counter}}.</p>',
          // template: '<p v-on:click="counter++;"class="hello">clicked: {{counter}}.</p>',
          // v-on:イベント名でコンポーネント内部で使われる変数へアクセスできる
      })


      var app = new Vue({
          el: '#app',
      });

      // helloタグと1.2を合わせてコンポーネントと呼ぶ
      // 一度コンポーネントを作れば、あとはタグを表示したいhtmlに埋め込めば、
      // 1,2のVueオブジェクトの作成部分を再利用できる